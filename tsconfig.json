{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "incremental": true,
    "paths": {
      // "./components/react-notion-x/*": ["react-notion-x"],
      // "./lib/notion-client/*": ["notion-client"],
      // "./lib/notion-utils/*": ["notion-utils"]
      "react-notion-x/*": ["react-notion-x"],
      "notion-client/*": ["lib/notion-client"],
      "notion-utils/*": ["lib/notion-utils"]
    },
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "site.config.ts"]
}
